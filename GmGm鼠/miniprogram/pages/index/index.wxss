/* pages/index/index.wxss */
/* 多处样式集 */
.Top_nav{border-bottom: 1rpx solid #f5f5f5;}

/* <!-- 顶部导航 --> */
.Top_nav{display: flex;color: #999999;font-weight: bold;}
.Top_nav>view{width: 50%;padding: 20rpx 0;text-align: center;}
.Top_nav-actv{color: #14B9C8;border-bottom: 6rpx solid #14B9C8;}

/* <!-- 顶部轮播 --> */
.Top_Carousel{height: 680rpx;padding: 25rpx;}
.Top_Carousel swiper,
.Top_Carousel view{
    width: 100%;height: 100%;
    position: relative;
    border-radius: 10rpx;
    overflow: hidden;
    background-size: cover;
}
.Top_Carousel text{position: absolute;left: 20rpx;top: 20rpx;color: #ffffff;font-size: 24rpx;}

