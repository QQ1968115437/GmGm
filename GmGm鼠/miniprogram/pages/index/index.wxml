<!--pages/index/index.wxml-->
<!-- 顶部导航 -->
<view class="Top_nav">
    <view class="{{top_nav==1?'Top_nav-actv':''}}" bindtap="Top_nav_actv">首页</view>
    <view class="{{top_nav==1?'':'Top_nav-actv'}}" bindtap="Top_nav_actv">咨讯</view>
</view>
<view>
    <!-- 顶部轮播 -->
    <view class="Top_Carousel">
        <swiper autoplay="true" indicator-dots="true" indicator-color="#fff" indicator-active-color="#d0cc36" circular="true">
            <swiper-item wx:for="{{Top_Carousel}}" wx:key="index" >
                <view style="background-image: url({{item.bg_img}})">
                    <text>{{item.text}}</text>
                </view>
            </swiper-item>
        </swiper>
    </view>
    <!-- 来自专题--组件special -->
    <component-special innerText="{{From_special[0].text}}" innerImg="{{From_special[0].img}}" innerHead="{{0}}"></component-special>
    <!-- 来自专题--组件special -->
    <component-special innerText="{{From_special[1].text}}" innerImg="{{From_special[1].img}}" innerHead="{{1}}"></component-special>
    <!-- 来自专题--组件special -->
    <component-special innerText="{{From_special[2].text}}" innerImg="{{From_special[2].img}}" innerHead="{{2}}"></component-special>
    <!-- 安利墙--组件Card_wall -->
    <component-Card_wall innerText="安利墙" innerJudge="1" innerContent="{{Amway_wall}}"></component-Card_wall>

    <!-- 玩赏家推荐游戏--组件Card_wall -->
    <component-Card_wall innerText="玩赏家推荐游戏" innerJudge="0" innerContent="{{Player_recommendation}}"></component-Card_wall>
</view>