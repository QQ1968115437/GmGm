/* pages/index/index.wxss */
/* 多处样式集 */
.Top_nav{border-bottom: 1rpx solid #eeeeee;}
/* <!-- 顶部导航 --> */
.Top_nav{display: flex;color: #999999;font-weight: bold;}
.Top_nav>view{width: 50%;padding: 20rpx 0;text-align: center;}
.Top_nav-actv{color: #14B9C8;border-bottom: 6rpx solid #14B9C8;}

/* <!-- 首页 --> */
/* <!-- 顶部轮播 --> */
.Top_Carousel{height: 680rpx;padding: 25rpx;color: white; }
.Top_Carousel swiper,
.Top_Carousel_view{
    width: 100%;height: 100%;
    position: relative;
    border-radius: 10rpx;
    overflow: hidden;
    background-size: cover;
}
.Top_Carousel_view>text{position: absolute;left: 20rpx;top: 20rpx;font-size: 24rpx;}
    /* 轮播图对应游戏 */
.Top_Carousel_deputy{display: flex;width: 660rpx;margin: 0 20rpx;z-index: 100;position: absolute;bottom: 40rpx;}
.Top_Carousel_deputy_00{width: 90rpx;height: 90rpx;border-radius: 20rpx;}
.Top_Carousel_deputy_00>image{max-width: 100%;max-height: 100%;}
.Top_Carousel_deputy_01{
  margin: 0 0 8rpx 15rpx;
  font-weight: bold;
  overflow:hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 26rpx;
}
.Top_Carousel_deputy_01>view{font-size: 32rpx}
.Top_Carousel_deputy_02{width: 200rpx;font-size: 20rpx;padding-top: 5rpx;margin-left: 6rpx;text-align: center;}
.Top_Carousel_deputy_02>text{white-space: nowrap;}
.Top_Carousel_deputy_02>view{display: flex;font-weight: bold;font-size: 38rpx;justify-content: center;}
.Top_Carousel_deputy_02>view>image{width: 38rpx;height: 38rpx;padding: 10rpx 8rpx 0 0;}

/* <!-- 咨讯 --> */
.information_lg{
    height: 350rpx;position: relative;
    margin: 25rpx;
    margin-bottom: 0;
    background-repeat: round;
    border-radius: 5rpx; 
}
.information_lg>text{
/* .idsfffffffff{ */
    color: white;
    position: absolute;
    bottom: 1em;
    line-height: 52rpx;
    /* 显示多行 */
    display:-webkit-box; 
    overflow:hidden; 
    white-space: normal;
    /* 2为显示的行数 */
    -webkit-line-clamp:2;
    -webkit-box-orient:vertical;
    text-align: center;
    font-weight: bold;
}

.information_sm{height: 160rpx;border-bottom: 1rpx solid #eeeeee;padding: 25rpx;display: flex;}
.information_sm>view>text{
    line-height: 52rpx;
    /* 显示多行 */
    display:-webkit-box; 
    overflow:hidden; 
    white-space: normal;
    /* 2为显示的行数 */
    -webkit-line-clamp:2;
    -webkit-box-orient:vertical;
}
.information_sm>view:nth-child(1){width: 74%;margin-right: 20rpx;white-space: nowrap;}
.information_sm>view>view{font-size: 25rpx;color: #14B9C8;margin-top: 20rpx;display: flex;justify-content: space-between;}
.information_sm>view>view>view{color: #bbbbbb;white-space: nowrap;}
.information_sm>view>view image{width: 30rpx;height: 30rpx;padding: 0 8rpx;position: relative;bottom: -5rpx;}
.information_sm_img{width: 300rpx;height: 100%;border-radius: 10rpx;position: relative;}
.information_sm_img>image:nth-child(1){width: 100%;height: 100%;overflow: hidden;border-radius: 5rpx;}
.information_sm_img>image:nth-child(2){width: 80rpx;height: 80rpx;position: absolute;background-color: #7c7c7c4b;border-radius: 50%;left: 36.66%;top: 40rpx;}