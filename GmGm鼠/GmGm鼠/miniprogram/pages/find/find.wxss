/* pages/find/find.wxss */
.search{height: 90rpx;background-color: #f1f1f1;display: flex;align-items: center;justify-content: center;}
.search>navigator{height: 75%;width: 90%;background-color: #e8e8e8;text-align: center;border-radius: 40rpx;font-size: 30rpx;color: #717171;line-height: 67.5rpx;}
.search image{width: 20rpx;height: 20rpx;}

.view0{padding: 10rpx 0}
.view1{display: flex;justify-content: space-between;padding: 20rpx 27rpx;padding-bottom: 0;}
.text{font-weight: bold;font-size: 34rpx;}
.navigator{color: #14B9C8;font-size: 28rpx;}

.view2{display: flex;flex-wrap: wrap;justify-content: center;}
.view2>view{width: 44%;height: 200rpx;padding: 15rpx 15rpx;}
.view2>view>image{width: 100%;height: 80%;border-radius: 10rpx;}

.view2>view>image+view{display: flex;font-weight: bold;font-size: 25rpx;color: #14B9C8;align-items: center;}
.view2>view>image+view>text:nth-child(1){font-size: 30rpx;color: #000000;width: 80%;overflow: hidden;text-overflow: ellipsis;white-space: nowrap;}
.view2>view>image+view>image{width: 32rpx;height: 32rpx;padding: 8rpx;}